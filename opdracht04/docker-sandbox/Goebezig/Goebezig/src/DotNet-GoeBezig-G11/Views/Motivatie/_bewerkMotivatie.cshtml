@model DotNet_GoeBezig_G11.Models.MotivatieViewModels.MaakMotivatieViewModel

<!-- MODAL BEWERK-->
<div class="modal fade" id="bewerkMotivaties" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">Bewerk motivatie</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form asp-action="BewerkMotivatie" asp-controller="Motivatie">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-control-label">Inhoud</label>
                        <textarea asp-for="Inhoud" class="form-control" style="width: 100%; height: 300px" id="word_count">@Model.Inhoud</textarea>
                        <p>
                            <span id="display_count"></span>/250 woorden
                        </p>
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-danger pull-left" name="action" value="verwijder">Verwijder volledige motivatie!</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Sluiten</button>
                    <button type="submit" class="btn btn-primary">Wijziging opslaan</button>
                </div>
            </form>
        </div>
    </div>
</div>